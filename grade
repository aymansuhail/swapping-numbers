#include <stdio.h>

enum result
{
	FAIL, PASS, SECOND, FIRST, FIRST_DISTINCTION
};

typedef struct Student1
{
	char Name[40];
	char RollNo[10];
	char Subjects[6][20];
	float marks[6];
	float avgMarks;
	int res;
	
	struct Address
	{
		char HNo[20];
		char streetName[30];
		char cityName[30];
	 }addr;
}Student;

void computeRes(Student *);

int main()
{
	int i, j;
	Student s[1];
	
	for(i=0; i<1; i++)
	{
		printf("Enter Student%d details\n", (i+1));
		
		printf("Enter Name:\n");
		gets(s[i].Name);
		
		printf("Enter RollNo:\n");
		scanf("%s", s[i].RollNo);
		
		printf("Enter names of 6 subjects\n");
		for(j=0; j<6; j++)
		{
			fflush(stdin);
			printf("Enter subject%d name:\n", (j+1));
			gets(s[i].Subjects[j]);
			
			printf("Enter marks of %s\n", s[i].Subjects[j]);
			scanf("%f", &s[i].marks[j]);
		}
		
		fflush(stdin);
		printf("Enter address:\n");
		printf("Enter House Number\n");
		gets(s[i].addr.HNo);
		
		printf("Enter Street Name:\n");
		gets(s[i].addr.streetName);
		
		printf("Enter city name\n");
		gets(s[i].addr.cityName);
	}
	
	for(i=0; i<1; i++)
		computeRes(&s[i]);
		
	printf("\n\n\n");
	for(i=0; i<1; i++)
	{
		printf("Student%d details\n", (i+1));
		
		printf("Name: %s\n", s[i].Name);
		
		printf("RollNo: %s\n", s[i].RollNo);
		
		printf("6 subjects\n");
		for(j=0; j<6; j++)
		{
			printf("Subject%d: %s\t", (j+1), s[i].Subjects[j]);
			
			printf("Marks: %f\n", s[i].marks[j]);
		}
		
		printf("Average Marks: %f\n", s[i].avgMarks);
		printf("Result: ");
		switch(s[i].res)
		{
			case FAIL:
				printf("FAIL\n");
				break;
			
			case PASS:
				printf("PASS\n");
				break;
			
			case SECOND:
				printf("B GRADE\n");
				break;
				
			case FIRST:
				printf("A GRADE\n");
				break;
			
			case FIRST_DISTINCTION:
				printf("FIRST WITH DISTINCTION\n");
				break;
		}
		printf("ADDRESS:\n");
		printf("H.No: %s\n", s[i].addr.HNo);
		
		printf("Street Name: %s\n", s[i].addr.streetName);
		
		printf("City Name: %s\n", s[i].addr.cityName);
	}
}

void computeRes(Student *s)
{
	float avg;
	int i;
	
	for(avg=0, i=0; i<6; i++)
	{
		printf("%f ", s->marks[i]);
		avg += s->marks[i];
	}
	
	avg /= 6;
	s->avgMarks = avg;
	
	if(avg < 35)
		s->res = FAIL;
	else if(avg >= 35 && avg < 45)
		s->res = PASS;
	else if(avg >= 45 && avg < 60)
		s->res = B GRADE;
	else if(avg >= 60 && avg < 70)
		s->res = A GRADE;
	else if(avg >= 70)
		s->res = FIRST_DISTINCTION;
}
